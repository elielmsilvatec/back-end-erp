<%- include('../partials/header.ejs') %>


    <%- include('../partials/msg.ejs') %>
        <p class="fs-3">Entrega finalizada</p>

        </br>

        <table class="table table-hover table-bordered">
            <thead class="thead-light">
                <tr>
                    <th>ID</th>
                    <th>Cliente</th>
                    <th>Status</th>
                    <th>Data da venda</th>
                    <th>Valor</th>
                    <th>Detalhes</th>
                </tr>
            </thead>
            <!-- lista todos as vendas  -->
            <% venda_finalizada.forEach(venda=> { %>
                <!-- lista todos os itens -->
                <% pedido.forEach(pedido=> { %>
                    <!-- verifica se a venda pertence ao id pedido -->
                    <% if( pedido.id==venda.id_pedido ) { %>

                        <tbody>
                            <tr>
                                <td data-toggle="modal" class="align-middle">
                                    <%= pedido.num_pedido %>
                                </td>
                                <td data-toggle="modal" class="align-middle">
                                    <% cliente.forEach(cliente=> { %>
                                        <% if( pedido.cliente_pedido==cliente.id ) { %>
                                            <%= cliente.nome %>
                                                <% } %>
                                                    <% }); %>
                                </td>
                                <td data-toggle="modal" class="align-middle">
                                    <!-- <% if( venda.entrega == 2) { %>   Entregue     <% } %> -->
                                    Entregue
                                </td>
                                <td data-toggle="modal" class="align-middle">
                                    <%= moment(venda.data_venda).format('DD/MM/YYYY') %>
                                </td>
                                <td data-toggle="modal" class="align-middle">
                                    <%= venda.valor_total_venda.toLocaleString('pt-BR', { style: 'currency' ,
                                        currency: 'BRL' }) %> %>
                                </td>

                                <td data-toggle="modal" class="align-middle">
                                    <a href="/entrega/ver/ <%= pedido.id %>">
                                        <button type="button" class="btn btn-outline-success btn-sm">Visualizar</button>
                                    </a>
                                </td>
                            </tr>

                        </tbody>

                        <% } %>

                            <% }); %>

                                <% }); %>
        </table>


















        <%- include('../partials/footer.ejs') %>