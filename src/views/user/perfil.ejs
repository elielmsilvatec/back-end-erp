<%- include('../partials/header.ejs') %>
    <%- include('../partials/msg.ejs') %>

        <body style="background-color: #f8f9fa;">
            <div class="container mt-5">
                <div class="row">
                    <div class="col-md-4">
                        <!-- Informações do Usuário -->
                        <div class="card">

                            <div class="card-body">
                                <h3 class="card-title">
                                    <%= user.nome%>
                                </h3>
                                <p class="card-text">
                                    <%= user.email %>
                                </p>
                                <a href="/user/perfil/cadastro" class="btn btn-primary">Editar Perfil</a>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <!-- Informações do Usuário -->
                        <div class="card">

                            <div class="card-body">

                                <p class="card-text">
                                    <a href="/user/cargo">Mudar cargo</a>
                                </p>

                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <!-- Informações do Usuário -->
                        <div class="card">
                            <div class="card-body">
                                <h5>Mudar a senha</h5>
                                <form class="form-signin" action="/user/nova-senha" method="post">
                                    <div class="form-label-group">
                                        <p class="card-text">
                                            <%= user.email %>
                                        </p>
                                    </div>
                                    <div class="form-label-group">
                                        <label for="inputPassword">Senha</label>
                                        <input name="senha" type="password" id="inputPassword" class="form-control"
                                            placeholder="Nova senha" required>
                                    </div>
                                    <br />
                                    <button class="btn  btn-primary btn-block text-uppercase"
                                        type="submit">Enviar</button>

                                </form>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-8">
                        <!-- Atividades do Usuário -->
                        <div class="card">
                            <div class="card-header">
                                <h4>
                                    <%= user.nome%>
                                </h4>
                            </div>
                            <div class="card-body">
                                <ul class="list-group">
                                    <li class="list-group-item">Mudar a senha:</li>
                                    <li class="list-group-item">#####</li>
                                    <li class="list-group-item">#####</li>
                                </ul>
                            </div>
                        </div>
                    </div>



                </div>
            </div>





            <%- include('../partials/footer.ejs') %>